<div class="row">
  <div class="small-12 medium-8 large-4 small-centered columns">
    <% model_name = resource.class.model_name.human.downcase %>
    <h3><%= t('devise.views.registrations.edit.title', resource: model_name) %></h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, role: 'form'}) do |f| %>
        <% update_btn_text = t('helpers.submit.update', model: model_name) %>
        <div id="edit-box" class="<%= 'hide' if resource.errors.include?(:current_password) %>">
          <div class="form-group">
            <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, class: 'form-control' %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div><%= t('devise.views.registrations.edit.confirmation_missing', unconfirmed_email: resource.unconfirmed_email) %></div>
            <% end %>
          </div>
          <fieldset>
            <p><%= t('devise.views.registrations.edit.change_password') %></p>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
          </fieldset>
          <a id='update-btn' href="javascript:void(0);" class="small right radius button"><%= update_btn_text %></a>
        </div>

        <fieldset id="current-pwd-box" class="<%= 'hide' unless resource.errors.include?(:current_password) %>">
          <span id="current-pwd-box-closer">&times;</span>
          <p><%= t('devise.views.registrations.edit.current_password') %></p>

          <div class="form-group">
            <%= f.password_field :current_password, class: 'form-control' %>
          </div>
          <%= f.submit update_btn_text, class: 'small right radius button' %>
        </fieldset>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-8 large-4 small-centered columns">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: 'form'}) do |f| %>
        <h3><%= t('devise.views.registrations.new.title') %></h3>
        <div class="form-group">
          <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autocomplete: :off, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: :off, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= f.submit t('devise.views.registrations.new.sign_up_button'), class: 'small radius button right' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="small-12 medium-8 large-4 small-centered columns">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, role: 'form'}) do |f| %>
        <h3><%= t('devise.views.passwords.new.title') %></h3>

        <p><%= t('devise.views.passwords.new.explanation') %></p>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <%= f.submit t('devise.views.passwords.new.reset_button'), class: 'small radius button right' %>
    <% end %>
  </div>
</div>

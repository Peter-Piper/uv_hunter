<div class="row">
  <div class="small-12 medium-8 large-4 small-centered columns">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form'}) do |f| %>
        <h3><%= t('devise.views.sessions.new.title') %></h3>
        <div class="form-group">
          <%- if devise_mapping.registerable? %>
              <%= link_to t('devise.views.sessions.new.sign_up_link'), new_registration_path(resource_name), class: 'right' %>
          <% end -%>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%- if devise_mapping.recoverable? %>
              <%= link_to t('devise.views.sessions.new.forgot_password_link'), new_password_path(resource_name), class: 'right' %>
          <% end -%>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <%= f.submit t('devise.views.sessions.new.log_in_button'), class: 'small radius button right' %>
        <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <%= f.check_box :remember_me %>
            </div>
        <% end -%>
    <% end %>
  </div>
</div>
